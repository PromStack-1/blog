---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<a href="/" class="logo">
			<span class="logo-icon">‚ú¶</span>
			<span class="logo-text">{SITE_TITLE}</span>
		</a>
		<div class="nav-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="nav-products">
			<a href="https://promstack.com" target="_blank" class="product-btn promstack">
				üìù PromStack
			</a>
			<a href="https://link.promstack.com" target="_blank" class="product-btn linkstack">
				üîó LinkStack
			</a>
		</div>
	</nav>
</header>

<style>
	header {
		position: sticky;
		top: 0;
		z-index: 100;
		background: rgba(10, 10, 12, 0.8);
		backdrop-filter: blur(20px);
		-webkit-backdrop-filter: blur(20px);
		border-bottom: 1px solid rgba(255, 255, 255, 0.04);
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1600px;
		margin: 0 auto;
		padding: 1rem 3rem;
	}
	.logo {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		text-decoration: none;
	}
	.logo-icon {
		font-size: 1.25rem;
		color: #818cf8;
	}
	.logo-text {
		font-weight: 700;
		font-size: 1.125rem;
		color: #fafafa;
		letter-spacing: -0.01em;
	}
	.nav-links {
		display: flex;
		gap: 0.5rem;
	}
	.nav-products {
		display: flex;
		gap: 0.75rem;
	}
	.product-btn {
		display: flex;
		align-items: center;
		gap: 0.375rem;
		padding: 0.625rem 1rem;
		font-size: 0.8125rem;
		font-weight: 600;
		border-radius: 10px;
		text-decoration: none;
		transition: all 0.2s ease;
	}
	.product-btn.promstack {
		background: rgba(99, 102, 241, 0.1);
		color: #a5b4fc;
		border: 1px solid rgba(99, 102, 241, 0.2);
	}
	.product-btn.promstack:hover {
		background: rgba(99, 102, 241, 0.2);
	}
	.product-btn.linkstack {
		background: rgba(16, 185, 129, 0.1);
		color: #6ee7b7;
		border: 1px solid rgba(16, 185, 129, 0.2);
	}
	.product-btn.linkstack:hover {
		background: rgba(16, 185, 129, 0.2);
	}

	@media (max-width: 900px) {
		nav { padding: 1rem 1.5rem; }
		.nav-products { display: none; }
	}
	@media (max-width: 640px) {
		.logo-text { display: none; }
	}
</style>
