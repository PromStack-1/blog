---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<div class="nav-left">
			<a href="/" class="logo">
				<span class="logo-icon">üìù</span>
				{SITE_TITLE}
			</a>
		</div>
		<div class="nav-center">
			<HeaderLink href="/">Ìôà</HeaderLink>
