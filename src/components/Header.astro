<style>
	header {
		position: sticky;
		top: 0;
		z-index: 50;
		background: rgba(10, 10, 11, 0.8);
		backdrop-filter: blur(12px);
		border-bottom: 1px solid #27272a;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0.75rem 1.5rem;
	}
	.nav-left, .nav-center, .nav-right {
		display: flex;
		align-items: center;
	}
	.logo {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-weight: 600;
		font-size: 1.125rem;
		color: #f4f4f5;
		text-decoration: none;
	}
	.logo:hover {
		color: #f4f4f5;
	}
	.logo-icon {
		font-size: 1.25rem;
	}
	.nav-center {
		gap: 0.5rem;
	}
	.cta-button {
		padding: 0.5rem 1rem;
		background: #6366f1;
		color: white;
		border-radius: 8px;
		font-size: 0.875rem;
		font-weight: 500;
		text-decoration: none;
		transition: background 0.2s ease;
	}
	.cta-button:hover {
		background: #4f46e5;
		color: white;
	}
	@media (max-width: 640px) {
		.nav-right {
			display: none;
		}
		nav {
			padding: 0.75rem 1rem;
		}
	}
</style>
